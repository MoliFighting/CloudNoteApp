<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ddbs.cloudnote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ddbs.cloudnote.activity.LoginActvity"
            android:label="@string/app_name" >
            <intent-filter >
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ddbs.cloudnote.activity.RegisterActivity" >
        </activity>
        <activity android:name="com.ddbs.cloudnote.activity.AboutActivity"></activity>
        <activity android:name="com.ddbs.cloudnote.activity.NoteContentActivity"></activity>
        <activity android:name="com.ddbs.cloudnote.activity.NoteTitleActivity"></activity>
        <activity android:name="com.ddbs.cloudnote.activity.EditActivity"></activity>
        <activity android:name="com.ddbs.cloudnote.activity.SettingsActivity"></activity>
    </application>

</manifest>